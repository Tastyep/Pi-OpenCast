{
  "manifest_version": 2,
  "name": "OpenCast",
  "version": "1.0",
  "description": "Send the current page URL to OpenCast",
  "icons": {
    "48": "icon/icon.svg"
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon/icon.svg",
    "default_title": "OpenCast"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
